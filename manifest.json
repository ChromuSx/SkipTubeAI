{
  "manifest_version": 3,
  "name": "SkipTube AI",
  "version": "1.0.0",
  "description": "Automatically skip sponsorships and irrelevant content in YouTube videos using AI",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background-bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content-bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}